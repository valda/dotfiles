escape ^zz
vbell off
startup_message off
defscrollback 10000
autodetach on
defutf8 on
defencoding utf8
hardstatus alwayslastline "%H %`%-w%{=b bw}%n %t%{-}%+w"

bind 'd' setenv DISPLAY
bind ^w windowlist -b
bind ^y paste
bind o focus
bind U eval "encoding utf8" "!!!echo 'export LANG=ja_JP.UTF-8'"
bind E eval "encoding euc-jp" "!!!echo 'export LANG=ja_JP.eucJP'"
bind S eval "encoding sjis" "!!!echo 'export LANG=ja_JP.SJIS'"
bind '-' exec screensplit.rb
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^]  command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'

#source $HOME/.ssh/ssh_agent.screenrc
